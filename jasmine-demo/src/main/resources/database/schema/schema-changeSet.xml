<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="demo_20220205194301" author="mh.z">
        <createTable tableName="sys_user" remarks="用户">
            <column name="id" type="bigint" remarks="主键id">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_sys_user"/>
            </column>
            <column name="user_name" type="varchar(100)" remarks="用户名">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(100)" remarks="密码">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="bigint" remarks="租户ID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="demo_20220124170501" author="mh.z">
        <createTable tableName="jnl_journal" remarks="日记">
            <column name="id" type="bigint" remarks="主键id">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_jnl_journal"/>
            </column>
            <column name="user_id" type="bigint" remarks="用户ID">
                <constraints nullable="false"/>
            </column>
            <column name="journal_title" type="varchar(100)" remarks="日记标题">
                <constraints nullable="false"/>
            </column>
            <column name="journal_content" type="varchar(100)" remarks="日记内容">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" remarks="创建日期">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" remarks="最后更新日期">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="bigint" remarks="租户ID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>